        <Label x:Name="RL1_label"  Content="0" HorizontalAlignment="Left" Margin="550,150,0,0" VerticalAlignment="Top" FontWeight="Heavy" FontSize="16" BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="40" HorizontalContentAlignment="Center"/>
