<Window x:Class="_15ways38.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_38puzzle;assembly=38puzzle"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="1538" Height="500" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="20" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property ="IsPressed" Value ="True">
                            <Setter  Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.0" ScaleY="0.9"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="Yellow" />
                </MultiTrigger.Setters>
            </MultiTrigger>
        </Style.Triggers>
    </Style>
    </Window.Resources>
    <Grid x:Name="GridForTiles">

        <Border CornerRadius="20"></Border>

        <Button x:Name="SolveButton" Content="Solve Game" HorizontalAlignment="Left" Margin="550,375,0,0" VerticalAlignment="Top"  Height="50" Width="100" Command="{Binding SolveGame}" />
        <Button x:Name="ResetButton" Content="Reset Game" HorizontalAlignment="Left" Margin="670,375,0,0" VerticalAlignment="Top"  Height="50" Width="100" Command="{Binding ResetGame}" />


        <Label Content="Diagnoal Left Going Down Right" HorizontalAlignment="Left" Margin="550,64,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold"/>
        <Label Content="Diagnoal Right Going Down Left" HorizontalAlignment="Left" Margin="550,129,0,0" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold" />
        <Label Content="Horizontal" HorizontalAlignment="Left" Margin="550,196,0,0" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="200" HorizontalContentAlignment="Center" FontWeight="Bold"/>

        <Label x:Name="LR1_label"  Content="0" HorizontalAlignment="Left" Margin="550,85,0,0" VerticalAlignment="Top" FontWeight="Heavy" FontSize="16"  BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="40" HorizontalContentAlignment="Center" />
        <Label x:Name="LR2_label"  Content="0" HorizontalAlignment="Left" Margin="590,85,0,0" VerticalAlignment="Top" FontWeight="Heavy" FontSize="16"  BorderBrush="Black" BorderThickness="2" Background="PaleVioletRed" Width="40" HorizontalContentAlignment="Center" />
